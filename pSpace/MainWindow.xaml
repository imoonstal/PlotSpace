        <TextBox x:Name="txt_cache_path" HorizontalAlignment="Left" Height="23" Margin="95,135,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="570"/>
        <TextBox x:Name="txt_final_path" HorizontalAlignment="Left" Height="23" Margin="95,163,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="570"/>
        <TextBlock HorizontalAlignment="Left" Margin="42,135,0,0" TextWrapping="Wrap" Text="缓存路径" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="42,163,0,0" TextWrapping="Wrap" Text="文件路径" VerticalAlignment="Top"/>
        <Button  Content="打开" HorizontalAlignment="Left" Margin="670,139,0,0" VerticalAlignment="Top" Width="72" Click="SelectFile_Click"/>
        <Button  Content="打开" HorizontalAlignment="Left" Margin="670,164,0,0" VerticalAlignment="Top" Width="72" Click="SelectFile_Click1"/>


        <TextBox x:Name="TbResult" TextWrapping="Wrap" IsReadOnly="True" AcceptsReturn="True" VerticalScrollBarVisibility="Visible" Margin="186,207,50,0"/>
        <TextBox x:Name="txt_thread_count" HorizontalAlignment="Left" Height="23" Margin="293,55,0,0" TextWrapping="Wrap" Text="1" VerticalAlignment="Top" Width="64"/>
        <TextBlock HorizontalAlignment="Left" Margin="252,55,0,0" TextWrapping="Wrap" Text="线程数" VerticalAlignment="Top"/>
        <TextBox x:Name="txt_buckets" HorizontalAlignment="Left" Height="23" Margin="293,83,0,0" TextWrapping="Wrap" Text="128" VerticalAlignment="Top" Width="64"/>
        <TextBlock HorizontalAlignment="Left" Margin="220,83,0,0" TextWrapping="Wrap" Text="buckets数量" VerticalAlignment="Top"/>
        <TextBox x:Name="txt_farmer_public_key" HorizontalAlignment="Left" Height="23" Margin="429,51,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="313"/>
        <TextBlock HorizontalAlignment="Left" Margin="362,54,0,0" TextWrapping="Wrap" Text="farmer公钥" VerticalAlignment="Top"/>
        <TextBox x:Name="txt_pool_public_key" HorizontalAlignment="Left" Height="23" Margin="429,79,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="313"/>
        <TextBlock HorizontalAlignment="Left" Margin="370,80,0,0" TextWrapping="Wrap" Text="pool公钥" VerticalAlignment="Top"/>
        <TextBox x:Name="txt_fingerprint" HorizontalAlignment="Left" Height="23" Margin="429,107,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="313"/>
        <TextBlock HorizontalAlignment="Left" Margin="363,108,0,0" TextWrapping="Wrap" Text="fingerprint" VerticalAlignment="Top"/>
        <Button  Content="生成参数" HorizontalAlignment="Left" Margin="95,207,0,0" VerticalAlignment="Top" Width="75" Click="Button_GetParam"/>
        <Button  Content="打开" HorizontalAlignment="Left" Margin="670,25,0,0" VerticalAlignment="Top" Width="72" Click="SelectFile_Click3"/>
    </Grid>
</Window>
