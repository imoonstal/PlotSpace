<Window x:Class="pSpace.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:pSpace"
        mc:Ignorable="d"
        Title="P盘程序" Height="450" Width="800" Closed="Window_Closed" Loaded="Window_Loaded">
    <Grid Margin="0,0,0,16">
        <Button  Content="P盘" HorizontalAlignment="Left" Margin="95,236,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>

        <TextBox x:Name="txt_exepath" HorizontalAlignment="Left" Height="36" Margin="95,10,0,0" TextWrapping="Wrap" Text="C:\Users\XXXXXXXX\AppData\Local\chia-blockchain\app-1.0.5\resources\app.asar.unpacked\daemon\chia.exe" VerticalAlignment="Top" Width="570"/>
        <TextBlock HorizontalAlignment="Left" Margin="58,13,0,0" TextWrapping="Wrap" Text="路径" VerticalAlignment="Top"/>

        <TextBox x:Name="txt_size" HorizontalAlignment="Left" Height="23" Margin="95,51,0,0" TextWrapping="Wrap" Text="32" VerticalAlignment="Top" Width="115"/>
        <TextBlock HorizontalAlignment="Left" Margin="58,51,0,0" TextWrapping="Wrap" Text="size" VerticalAlignment="Top"/>

        <TextBox x:Name="txt_n" HorizontalAlignment="Left" Height="23" Margin="95,79,0,0" TextWrapping="Wrap" Text="1" VerticalAlignment="Top" Width="115"/>
        <TextBlock HorizontalAlignment="Left" Margin="42,80,0,0" TextWrapping="Wrap" Text="队列长度" VerticalAlignment="Top"/>

        <TextBox x:Name="txt_memory_cache" HorizontalAlignment="Left" Height="23" Margin="95,107,0,0" TextWrapping="Wrap" Text="3390" VerticalAlignment="Top" Width="115"/>
